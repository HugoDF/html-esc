  },
  "homepage": "https://github.com/HugoDF/html-esc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoDF/html-esc.git"
  },
  "bugs": {
    "url": "https://github.com/HugoDF/html-esc/issues"
  },
  "author": {
    "name": "HugoDF",
    "url": "https://codewithhugo.com/about"
  },
